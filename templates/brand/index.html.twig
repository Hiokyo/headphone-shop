{% extends 'base.html.twig' %}

{% block title %}Hello BrandController!{% endblock %}

{% block body %}
<div class="container">
   <h4 class="text-primary text-center">Brand List</h4>
   <a class="btn btn-outline-primary" href="{{ path('brand_add') }}">ADD BRAND</a>
   <table class="table table-striped text-center">
      <thead>
         <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Origin</th>
         </tr>
      </thead>
      <tbody>
      {% for brand in brands %}
          <tr>
            <td>{{ brand.id }}</td>
            <td>{{ brand.name }}</td>
            <td>
               <a class="btn btn-info" href="{{ path('brand_detail', {'id' : brand.id }) }}">DETAIL</a>
               <a class="btn btn-primary" href="{{ path('brand_edit', {'id': brand.id }) }}">EDIT</a>
               <a class="btn btn-warning" href="{{ path('brand_delete', {'id': brand.id }) }}"
               onclick="return confirm('Are you sure to delete this brand ?')">
               DELETE</a>
            </td>
         </tr>
      {% endfor %}     
      </tbody>
   </table>
</div>
{% endblock %}
