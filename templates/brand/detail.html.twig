{% extends 'base.html.twig' %}

{% block title %}Brand Detail{% endblock %}

{% block body %}
<div class="container">
   <h4 class="text-primary text-center">Brand Detail</h4>
   <a class="btn btn-outline-primary" href="{{ path('brand_index') }}">BACK TO BRAND LIST</a>
   <table class="table table-striped text-center">
      <thead>
         <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Origin</th>
            <th>Actions</th>
         </tr>
      </thead>
      <tbody>
          <tr>
            <td>{{ brand.id }}</td>
            <td>{{ brand.name }}</td>
            <td>{{ brand.origin }}</td>
            <td>
               <a class="btn btn-primary" href="{{ path('brand_edit', {'id': brand.id }) }}">EDIT</a>
               <a class="btn btn-warning" href="{{ path('brand_delete', {'id': brand.id }) }}"
               onclick="return confirm('Are you sure to delete this brand ?')">
               DELETE</a>
            </td>
         </tr>    
      </tbody>
   </table>
</div>
{% endblock %}
