<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
              integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
              crossorigin="anonymous">

            <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
        {% endblock %}

        {% block javascripts %}
            <!-- JavaScript Bundle with Popper -->

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}

        <style>
            .nav-item{
                padding: 0 20px; 
            }

            .navbar-nav.cart{
                margin-right: 30px;
            }

            .menu{
                font-size: 1rem;
            }

        </style>
    </head>
    <body>
        <div id="wrapper">
        
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a href="{{ path('home') }}" class="navbar-brand">
                    <img src="{{ asset('/image/product/logo.png') }}" width="30" height="30" class="d-inline-block align-top" alt="">
                    Dino Shop
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                <ul class="navbar-nav ml-auto mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('product_index') }}">Product management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('brand_index') }}">Brand management</a>
                    </li>
                </ul>
                {% else %}

                {% endif %}

                <div class="navbar-nav cart ml-auto">
                    <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-floating m-1 menu">
                        <i class="uil uil-signin"></i>
                    </a>
                </div>
                
                <div class="navbar-nav cart">
                    <a href="{{ path('cart') }}" class="btn btn-outline-light btn-floating m-1 menu">
                        <i class="uil uil-shopping-cart-alt "></i>
                    </a>
                </div>

                <div class="navbar-nav cart">
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-floating m-1 menu">
                        <i class="uil uil-signout"></i>
                    </a>
                </div>

            </nav>
            
        {% endblock %}
        <div class="container col-md-6 mt-3">
			{% for message in app.flashes('Error') %}
				<p class="alert alert-danger">{{ message }}</p>
			{% endfor %}
			{% for message in app.flashes('Success') %}
				<p class="alert alert-primary">{{ message }}</p>
			{% endfor %}
		</div>
        {% block body %}{% endblock %}

        {% block footer %}
        <style>
            #wrapper {
                position: relative;
                min-height: 100%;
                box-sizing: border-box;
                padding-bottom: 12em;
            }

            html, body {
                height: 100%;
                margin: 0;
                padding: 0;
            }

            #footer {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
            }
        </style>

            <footer id="footer" class="bg-dark text-center text-white ">
                <!-- Grid container -->
                <div class="container p-4 pb-0">
                    <!-- Section: Social media -->
                    <section class="mb-4">
                    <!-- Facebook -->
                    <a class="btn btn-outline-light btn-floating m-1" href="https://www.facebook.com/" role="button">
                        <i class="uil uil-facebook-f"></i>
                    </a>

                    <!-- Google -->
                    <a class="btn btn-outline-light btn-floating m-1" href="https://www.google.com/" role="button"
                        ><i class="uil uil-google"></i>
                    </a>

                    <!-- Linkedin -->
                    <a class="btn btn-outline-light btn-floating m-1" href="https://www.linkedin.com/" role="button"
                        ><i class="uil uil-linkedin-alt"></i>
                    </a>

                    <!-- Github -->
                    <a class="btn btn-outline-light btn-floating m-1" href="https://github.com/Hiokyo/headphone-shop.git" role="button"
                        ><i class="uil uil-github-alt"></i>
                    </a>
                    </section>
                    <!-- Section: Social media -->
                </div>
                <!-- Grid container -->

                <!-- Copyright -->
                <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                    &#169; 2021 Copyright all rights reserved
                </div>
                <!-- Copyright -->
            </footer>
        {% endblock %}
        </div>
    </body>
</html>
